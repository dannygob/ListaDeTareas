<!--        android:layout_height="wrap_content"-->
<!--        android:layout_weight="1"-->
<!--        android:text="Category name"-->
<!--        android:textAppearance="@style/TextAppearance.Material3.TitleLarge"/>-->

</LinearLayout>

</FrameLayout>